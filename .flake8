[flake8]
max-line-length = 88
extend-ignore = E203
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .eggs,
    .tox,
    .nox,
    .pytest_cache,
    .mypy_cache,
    docs/_build
per-file-ignores =
    __init__.py:F401
    tests/*:S101
    examples/*:S101
max-complexity = 10
select = B,C,E,F,W,T4,B9 