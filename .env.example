# Nova Configuration Example
# Copy this file to .env and customize the values for your setup

# =============================================================================
# LLM Configuration
# =============================================================================

# Primary LLM Provider (nvidia, openai, anthropic, etc.)
LLM_PROVIDER=nvidia

# Model Configuration
MODEL_NAME=nvidia/llama-3.3-nemotron-super-49b-v1
MODEL_TEMPERATURE=0.1
MODEL_MAX_TOKENS=4096
MODEL_TOP_P=0.9
MODEL_TOP_K=50
MODEL_REPETITION_PENALTY=1.0

# API Keys (set the appropriate one for your provider)
NVIDIA_API_KEY=your_nvidia_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# API Base URLs (customize if needed)
NVIDIA_API_BASE_URL=https://integrate.api.nvidia.com/v1
# OPENAI_API_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_API_BASE_URL=https://api.anthropic.com

# =============================================================================
# Browser Configuration
# =============================================================================

# Browser Settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720

# =============================================================================
# Memory Configuration
# =============================================================================

# Memory Settings
MEMORY_MAX_EXAMPLES=5

# =============================================================================
# Logging Configuration
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Development Settings
# =============================================================================

# Environment mode
ENVIRONMENT=development

# Additional debugging options
DEBUG_MODE=false
VERBOSE_LOGGING=false
